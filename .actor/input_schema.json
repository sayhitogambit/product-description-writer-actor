{
  "title": "Product Description Writer Input",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "productName": {"title": "Product Name", "type": "string", "minLength": 1},
    "features": {"title": "Product Features", "type": "array", "editor": "stringList", "default": []},
    "targetAudience": {"title": "Target Audience", "type": "string", "default": "general consumers"},
    "brand": {"title": "Brand Name", "type": "string", "default": ""},
    "category": {"title": "Product Category", "type": "string", "default": ""},
    "tone": {"title": "Writing Tone", "type": "string", "enum": ["professional", "casual", "luxury", "friendly"], "default": "professional"},
    "length": {"title": "Description Length", "type": "string", "enum": ["short", "medium", "long"], "default": "medium"},
    "model": {"title": "AI Model", "type": "string", "enum": ["openai/gpt-4o-mini", "google/gemini-2.0-flash-exp:free"], "default": "google/gemini-2.0-flash-exp:free"},
    "openrouterApiKey": {"title": "OpenRouter API Key", "type": "string", "isSecret": true}
  },
  "required": ["productName", "openrouterApiKey"]
}
